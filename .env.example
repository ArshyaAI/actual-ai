# Claude API Configuration
ANTHROPIC_API_KEY=your_claude_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3001

# LLM Configuration
LLM_PROVIDER=anthropic
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Features Configuration
FEATURES=["freeWebSearch", "classifyOnStartup"]

# Rate Limiting
DISABLE_RATE_LIMITER=false

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./temp

# Export Configuration
EXPORT_DIR=./exports

# Database Configuration (if using database in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/swiss_bookkeeping

# Security Configuration
CORS_ORIGIN=http://localhost:3001

# Logging Configuration
LOG_LEVEL=info

# Swiss Accounting Configuration
DEFAULT_CURRENCY=CHF
DEFAULT_VAT_RATE=7.7
FISCAL_YEAR_START=01-01